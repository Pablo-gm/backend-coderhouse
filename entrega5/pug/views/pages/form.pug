        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title=Productos
        link(href="./css/bootstrap.min.css" rel="stylesheet")
    body.bg-light
        div(class="container py-3")
            include ../partials/navigation.pug

            div(class="row justify-content-center")
                div(class="col-12 col-lg-6")
                h4 Agregar producto
                form(action='/productos' method='POST')
                    div(class="row g-3")
                        div.col-12
                            label(class="form-label" for='title') TÃ­tulo
                            input#title(class="form-control" type='text' name='title' placeholder='Nombre del producto')
                        div.col-12
                            label(class="form-label" for='price') Precio
                            input#price(class="form-control" type='text' name='price' placeholder='Ej. 3.50')
